{
  "description": "Automatically checks and updates marketplace metadata at session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/update-marketplaces.py",
            "timeout": 60
          }
        ]
      }
    ]
  }
}